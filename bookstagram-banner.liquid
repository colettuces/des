<section style="background: rgba(255,255,255,0.9); padding: 3rem 1rem;">
  <h2 style="text-align: center; font-size: {{ section.settings.heading_size }}px; font-family: {% if settings.global_font_family == 'averia' %}'Averia Serif Libre'{% elsif settings.global_font_family == 'inter' %}'Inter'{% else %}'Work Sans'{% endif %}; color: {{ settings.global_text_color }};">
    {{ section.settings.heading_text }}
  </h2>

  <div class="swiper bookstagram-swiper" style="margin-top: 2rem;">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" style="max-width: 400px; margin: auto; background: white; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); padding: 1rem;">
          {% if block.settings.image_url != blank %}
            <img src="{{ block.settings.image_url }}" alt="Bookstagram post" style="width: 100%; border-radius: 8px;" loading="lazy">
          {% endif %}
          <p style="font-weight: bold; color: #000; margin-top: 0.75rem; font-size: 1rem;">{{ block.settings.username }}</p>
          <p style="font-family: Helvetica, Arial, sans-serif; color: #444; font-size: 0.9rem;">{{ block.settings.caption }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next" style="color: #6a4e32;"></div>
    <div class="swiper-button-prev" style="color: #6a4e32;"></div>
  </div>
</section>

<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.bookstagram-swiper', {
      loop: true,
      slidesPerView: 1.2,
      spaceBetween: 20,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev'
      },
      keyboard: true,
      breakpoints: {
        768: { slidesPerView: 2 },
        1024: { slidesPerView: 3 }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Bookstagram Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Show Off your Latest Reads"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 16,
      "max": 48,
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "bookstagram_post",
      "name": "Bookstagram Post",
      "settings": [
        {
          "type": "text",
          "id": "username",
          "label": "Username",
          "default": "@booklover"
        },
        {
          "type": "url",
          "id": "image_url",
          "label": "Image URL"
        },
        {
          "type": "textarea",
          "id": "caption",
          "label": "Caption",
          "default": "This was my favorite read this month. Whatâ€™s on your TBR?"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bookstagram Carousel",
      "category": "Media"
    }
  ]
}
{% endschema %}
