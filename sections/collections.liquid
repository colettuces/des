{% layout 'theme' %}

<section class="collections-section" style="text-align: center; padding: 4rem 2rem;">
  <h2 style="font-size: 2.2rem; color: #8f3e1d; margin-bottom: 2rem;">
    Our Collections
  </h2>

  <div class="collection-grid">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
        <div class="collection-card">
          <a href="{{ collection.url }}">
            <img
              src="{{ collection.image | image_url: width: 600 }}"
              alt="{{ collection.title }}"
              class="collection-image"
            />
            <h3>{{ collection.title }}</h3>
            <p>{{ collection.description | truncatewords: 15 }}</p>
          </a>
        </div>
      {% endunless %}
    {% endfor %}
  </div>
</section>

<style>
  .collection-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .collection-card {
    background-color: #fffaf2;
    border: 1px solid #eedfc5;
    border-radius: 10px;
    width: 240px;
    padding: 1.2rem;
    text-align: center;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-5px);
    box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.08);
  }

  .collection-card img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .collection-card h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #5a3e2b;
  }

  .collection-card p {
    font-size: 0.95rem;
    color: #6b4a2b;
  }
</style>
{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Browse All Collections"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Grid Columns",
      "min": 1,
      "max": 4,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "All Collections",
      "category": "Collections"
    }
  ]
}
{% endschema %}

