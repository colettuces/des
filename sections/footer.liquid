<footer class="site-footer" style="
  padding: 2rem 1rem;
  text-align: center;
  background-color: {{ section.settings.bg_color }};
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
">
  <p>Contact us anytime: <a href="mailto:support@designsbycolettuces.com" style="color: {{ section.settings.text_color }}; font-weight: bold;">support@designsbycolettuces.com</a></p>

  {% if section.settings.show_socials %}
    <div style="margin-top: 1rem;">
      {% if section.settings.instagram %}
        <a href="{{ section.settings.instagram }}" target="_blank" style="margin: 0 0.5rem;">Instagram</a>
      {% endif %}
      {% if section.settings.twitter %}
        <a href="{{ section.settings.twitter }}" target="_blank" style="margin: 0 0.5rem;">Twitter</a>
      {% endif %}
    </div>
  {% endif %}
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fffdf6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2f2f2f"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "show_socials",
      "label": "Show Social Links",
      "default": false
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter",
      "label": "Twitter URL"
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Theme Elements"
    }
  ]
}
{% endschema %}
