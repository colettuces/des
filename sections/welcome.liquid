    { "type": "text", "id": "decor_bottom_left_left", "label": "Left", "default": "20px" },
    { "type": "text", "id": "decor_bottom_left_bottom", "label": "Bottom", "default": "20px" },
    { "type": "text", "id": "decor_bottom_left_right", "label": "Right", "default": "" },

    {
      "type": "checkbox",
      "id": "show_decor_bottom_right",
      "label": "Show Bottom Right Decor",
      "default": true
    },
    { "type": "text", "id": "decor_bottom_right_image", "label": "Bottom Right Image", "default": "calendar.png" },
    { "type": "text", "id": "decor_bottom_right_top", "label": "Top", "default": "" },
    { "type": "text", "id": "decor_bottom_right_left", "label": "Left", "default": "" },
