<section class="welcome">
  {% if section.settings.show_decor %}
    <div class="decor decor-bottom-left"></div>
  {% endif %}

  <h2>
    {{ section.settings.heading }}<br>
    <span>{{ section.settings.brand_name }}</span>
  </h2>

  <p>{{ section.settings.paragraph_1 }}</p>
  <p>{{ section.settings.paragraph_2 }}</p>

  {% if section.settings.show_decor %}
    <div class="decor decor-bottom-right"></div>
  {% endif %}

  {% if section.settings.show_decor_top_left %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_top_left_image | asset_url }});
      top: {{ section.settings.decor_top_left_top }};
      left: {{ section.settings.decor_top_left_left }};
      bottom: {{ section.settings.decor_top_left_bottom }};
      right: {{ section.settings.decor_top_left_right }};
    "></div>
  {% endif %}

  {% if section.settings.show_decor_top_right %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_top_right_image | asset_url }});
      top: {{ section.settings.decor_top_right_top }};
      left: {{ section.settings.decor_top_right_left }};
      bottom: {{ section.settings.decor_top_right_bottom }};
      right: {{ section.settings.decor_top_right_right }};
    "></div>
  {% endif %}

  {% if section.settings.show_decor_bottom_left %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_bottom_left_image | asset_url }});
      top: {{ section.settings.decor_bottom_left_top }};
      left: {{ section.settings.decor_bottom_left_left }};
      bottom: {{ section.settings.decor_bottom_left_bottom }};
      right: {{ section.settings.decor_bottom_left_right }};
    "></div>
  {% endif %}

  {% if section.settings.show_decor_bottom_right %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_bottom_right_image | asset_url }});
      top: {{ section.settings.decor_bottom_right_top }};
      left: {{ section.settings.decor_bottom_right_left }};
      bottom: {{ section.settings.decor_bottom_right_bottom }};
      right: {{ section.settings.decor_bottom_right_right }};
    "></div>
  {% endif %}

  {% if section.settings.show_decor_left_illustration %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_left_illustration_image | asset_url }});
      top: {{ section.settings.decor_left_illustration_top }};
      left: {{ section.settings.decor_left_illustration_left }};
      bottom: {{ section.settings.decor_left_illustration_bottom }};
      right: {{ section.settings.decor_left_illustration_right }};
    "></div>
  {% endif %}

  {% if section.settings.show_decor_right_illustration %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_right_illustration_image | asset_url }});
      top: {{ section.settings.decor_right_illustration_top }};
      left: {{ section.settings.decor_right_illustration_left }};
      bottom: {{ section.settings.decor_right_illustration_bottom }};
      right: {{ section.settings.decor_right_illustration_right }};
    "></div>
  {% endif %}

  {% if customer %}
    <p>Welcome back, {{ customer.first_name }}!</p>
    <a href="/account" class="btn">View My Account</a>
  {% else %}
    <a href="/account/login" class="btn">Login</a>
    <a href="/account/register" class="btn">Sign Up</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Welcome Heading",
      "default": "Welcome to"
    },
    {
